 @{
     var usuarioActual =  Context.Session.GetInt32("idUsuarioActual");
  }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cine_Flagg</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cines_Flagg.styles.css" asp-append-version="true" />

    <head>
        <!-- ... Otras etiquetas ... -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
        <!--Icono de la pesataña-->
        <link rel="shortcut icon" href="/img/icf.png"> 
    </head>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm text-light navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img width="120px" typeof="image/png" src="/img/icflagg.png"/></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">     
                        <li class="nav-item">
                            <a class="nav-link text-light fs-4" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>                  
                        <li class="nav-item">  
                            <a class="nav-link text-light fs-4" asp-area="" asp-controller="Usuarios" asp-action="Index">ABM Usuarios</a>
                        </li>                  
                        <li class="nav-item">  
                            <a class="nav-link text-light fs-4" asp-area="" asp-controller="Peliculas" asp-action="Index">ABM Peliculas</a>
                        </li>                  
                        <li class="nav-item">  
                            <a class="nav-link text-light fs-4" asp-area="" asp-controller="Salas" asp-action="Index">ABM Salas</a>
                        </li>                         
                        <li class="nav-item">  
                            <a class="nav-link text-light fs-4" asp-area="" asp-controller="Funcions" asp-action="Index">ABM Funciones</a>
                        </li>                  
                        <li class="nav-item">
                            <a class="nav-link text-light fs-4" asp-area="" asp-controller="Cartelera" asp-action="Index">Cartelera</a>
                        </li>
                        @if (usuarioActual == null) { 
                            <li class="nav-item border-light btn btn-primary ml-auto">
                            <a class="nav-link text-light fs-4" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                            </li>
                            <li class="nav-item border-light btn btn-primary">
                            <a class="nav-link text-light fs-4" asp-area="" asp-controller="Register" asp-action="Index">Registro</a>
                            </li>
                        }else
                        {
                            <li class="nav-item ml-auto">
                                <a class="text-light fs-4" asp-controller="MiUsuario" asp-action="Index"><img width="50px" height="50px" src="/img/usuario.png"/>MIS DATOS</a>
                            </li>
                            <li class="nav-item text-light fs-4 ml-2">
                                @Html.ActionLink("Cerrar Sesión", "CerrarSesion", "Cartelera", null, new { @class = "btn btn-warning"})
                            </li>
                        }                           
                    </ul>
                </div>
            </div>
        </nav> 
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Cines_Flagg - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
